<html>
<head>
    <title>Home</title>
    <style>
        body {
            margin: 0;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: White;
                text-align: center;
                padding: 14px 62px;
                text-decoration: none;
                font-size: 19px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .container {
            position: relative;
            text-align: center;
            color: white;
        }

        .top-right {
            position: absolute;
            top: 20px;
            right: 16px;
        }
    </style>
</head>
<body>




    <div class="topnav">

        <a class="active" href="/Home">Home</a>
        <a href="/About">About</a>

        @if (@Session["tutor"] == "True")
        {
            <a href="/Find">Find Tuition</a>
            <a href="/Login/Welcome">Update Profile</a>
            <a href="/LoOut">Logout</a>

        }

        @if (@Session["parent"] == "True")
        {
            <a href="/PostTuition">Post Tuition</a>
            <a href="/AppliedList">Applied Tutors</a>
            <a href="/Login/WelcomeParent">Update Profile</a>
            <a href="/LoOut">Logout</a>

        }
        @if (@Session["tutor"] != "True" && @Session["parent"] != "True")
        {
            <a href="/Find">Find Tuition</a>
            <a href="/SignUp">Sign Up</a>
            <a href="/Login">Sign In</a>
        }
        <a href="/ContactUs">Contact Us</a>

    </div>
    
    <div class="container">
        <img src="2.Jpg" width="100%" height="93%">
        
        <div font="110px" class="top-right">  
            <p> <font size="5" color="BLUE"><h3>Tutors Available:@TempData["count"] </h3></font> </p>
            <p> <font size="5" color="BLUE"> <h3>Tuition Available:@TempData["countPost"] </h3> </font> </p>
            <p> <font size="5" color="WHITE">  Teach the children so it will not be necessary to teach the adults </font> </p>

            <p> <font size="5" color="WHITE">  -Abraham Lincoln </font> </p>


        </div>
        bLUE

    </div>

    @if (TempData["welcome"] != null)
    {
        <script>
            window.onload = function () {
                alert("@TempData["welcome"]");
            };
        </script>
    }


</body>
</html>